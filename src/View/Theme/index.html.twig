{% extends 'layout.html.twig' %}

{% block title %}
	Accueil - liste des themes
{% endblock %}

{% block content %}
	<div class="container-fluid">

		<div class="row body flex-row">
			<div class="col-8 d-flex justify-content-center bg-clair">
				<div class="d-flex justify-content-center align-items-center">
					<img class="h-75 rounded-bottom rounded-5" src="/../assets/images/homepage_img.png">
				</div>
			</div>

			<div class="col-4 d-flex justify-content-center align-items-center bg-green">
				<ul class="list-group list-unstyled">
					{% for theme in themes %}
						<li class="border-bottom">
							<a href="/theme/show?id={{theme.id}}" class="bg-green text-color-clair fs-3 p-4 list-group-item">
								{{theme.name}}
							</a>
						</li>
					{% endfor %}
				</ul>
			</div>
		</div>
	</div>
{% endblock %}
