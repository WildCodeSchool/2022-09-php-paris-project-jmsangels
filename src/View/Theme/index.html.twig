{% extends 'layout.html.twig' %}

{% block title %}
	KNOWLEDGE
{% endblock %}

{% block navbar %}
	<nav class="navbar navbar-expand-md bg-dark">
		<div class="container-fluid p-0">
			<ul
				class="navbar-nav text-center align-items-center">
				{# {% for subject in subjects %} #}
				{% for i in range(0,7) %}
					<li class="col-3 nav-item">
						<div class="">
							<a class="nav-link text-white" href="/subject?idtheme={{ idtheme}}&idsubject={{ subjects[i].id }}">{{ subjects[i].name }}</a>
						</div>
					</li>
				{% endfor %}
			</ul>
			<ul class="navbar-nav  align-items-center">>
				<a class="" href="">📝</a>
				<a class="ms-3" href="">🛠</a>
				<a class="ms-3 " href="">🧻</a>
				{% if subjects|length > 8 %}
					<a class="ms-5 me-2" href="">⏩</a>
				{% endif %}

			</ul>
		</div>
	</nav>
{% endblock %}

{% block content %}
	<div class="container-fluid p-0">
		<div class="row m-0">

			<div class="col-2 bg-notions position-fixed h-100">
				<div class="row align-items-center">
					<div class="col-6 text-center">
						<h2 class="p-3 mb-0">Notions</h2>
					</div>
					<div class="col-6 text-end">
						<a class="" href="">📝</a>
						<a class="ms-1" href="">🛠</a>
						<a class="ms-1 " href="">🧻</a>
					</div>
				</div>

				<nav class="navbar">

					<ul class="navbar-nav text-center w-100">

						{% for notion in notions %}
							<li class="nav-item">
								<a class="hover-a border-bottom border-dark nav-link  fs-5" href="/notion/?idtheme={{ idtheme}}&idsubject={{ idsubject }}&idnotion={{notion.id}}">{{ notion.name}}</a>
							</li>

						{% endfor %}
					</ul>
				</nav>

			</div>

			<div class="col-10" style="margin-left : 290px">

				<div class="row mt-4 justify-content-around">

					<div class="col-5">
						<div class="card lecon-exemples-card bg-white mb-3">
							<h4 class="card-header">Leçon</h4>
							<div class="card-body m-0 p-0">
								<textarea class="textarea-form form-control h-100" name="lecon">{{notion.lesson}}</textarea>
							</div>
						</div>
					</div>

					<div class="col-5">
						<div class="card lecon-exemples-card bg-white mb-3">
							<h4 class="card-header">Exemples</h4>
							<div class="card-body m-0 p-0">
								<textarea class="textarea-form form-control h-100" name="exemples">{{notion.sample}}</textarea>
							</div>
						</div>
					</div>

				</div>

				<div class="row mt-3 justify-content-center">
					<div class="col-11">
						<div class="card exercices-card bg-white">
							<h4 class="card-header">Exercices</h4>
							<div
								class="card-body">{# <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> #}
							</div>
						</div>
					</div>
				</div>

			</div>
		</div>
	</div>

{% endblock %}
