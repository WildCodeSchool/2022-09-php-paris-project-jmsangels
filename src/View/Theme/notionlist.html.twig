<div class="col-2 bg-clair position-fixed mt-3 h-100">

	<div class="row mt-5 ms-0 align-items-center border border-2 border-top-0 border-end-0  w-100">

		<div class="col-6 mt-3 text-center">
			<h4 class="ps-4">Notions</h4>
		</div>

		<div class="col-6 mt-3 text-end">
			<a class="fs-5" href="">📝</a>
			{# <a class="ms-1" href="">🛠</a> #}
			{# <a class="ms-1 " href="">🧻</a> #}
		</div>
	</div>

	<div class="list-group mt-5 notion-scroll">
		{% set first = 1 %}

		{% for notionitem in notions %}

			<div class="container justify-content-around">

				{% if notion.id == notionitem.id %}
					<div class="list-group-item bg-green border-top-0 d-flex align-items-center justify-content-between">
						<a class="hover menu-item text-color-clair fs-5 pe-5" href="/notion/?id={{notionitem.id}}">{{ notionitem.name}}</a>
						<div>
							<a class="fs-4" href="">🛠</a>
							<a class="fs-4" href="">🧻</a>
						</div>
					</div>
				{% else %}
					<div class="list-group-item bg-clair">
						{% if first %}
							<a class="hover menu-item fs-5 text-color-green pe-5" href="/notion/?id={{notionitem.id}}">{{ notionitem.name}}</a>
						{% else %}
							<a class="hover menu-item border-top-0 fs-5 pe-5 text-color-green" href="/notion/?id={{notionitem.id}}">{{ notionitem.name}}</a>
						{% endif %}
					</div>
				{% endif %}

			</div>
			{% set first = 0 %}
		{% endfor %}

	</div>
</div>
