<div class="body-theme aside bg-clair position-fixed">

	<div class="row d-flex mt-5 ms-0 align-items-center border w-100">

		<div class="col-6 mt-2 text-center">
			<p class="fs-5 ps-4">Notions</p>
		</div>

		<div class="col-6 mt-2 text-end">
			<p class="fs-4">
				<a href="/notion/add?subjectId={{subjectId}}">📝</a>
			</p>
		</div>
	</div>


	<div class=" row list-group mt-5 notion-scroll">
		{% set first = 1 %}

		{% for notionitem in notions %}

			<div class="container justify-content-around fs-6">

				{% if notion.id == notionitem.id %}
					<div class="list-group-item bg-green border-top-0 d-flex align-items-center justify-content-between">
						<a class="hover menu-item text-color-clair pe-5" href="/notion/show?id={{notionitem.id}}">{{ notionitem.name}}</a>
						<div>
							<a class="fs-5" href="">🛠</a>
							<a class="fs-5" href="">🧻</a>
						</div>
					</div>
				{% else %}
					<div class="list-group-item bg-clair">
						{% if first %}
							<a class="hover menu-item text-color-green pe-5" href="/notion/show?id={{notionitem.id}}">{{ notionitem.name}}</a>
						{% else %}
							<a class="hover menu-item border-top-0 pe-5 text-color-green" href="/notion/show?id={{notionitem.id}}">{{ notionitem.name}}</a>
						{% endif %}
					</div>
				{% endif %}

			</div>
			{% set first = 0 %}
		{% endfor %}
	</div>
</p></div>
