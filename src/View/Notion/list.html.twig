<div class="body-theme aside bg-clair position-fixed">

	<div class="row d-flex mt-5 ms-0 align-items-center border w-100">

		<div class="col-6 mt-2 text-center">
			<p class="fs-5 ps-4">Notions</p>
		</div>

		{% if notions is not empty %}
			<div class="col-6 mt-2 text-end">
				<p class="fs-4">
					<a href="/notion/add?id_subject={{subjectId}}">üìù</a>
				</p>
			</div>
		{% endif %}
	</div>


	<div class="row list-group mt-5 notion-scroll">

		{% for notion in notions %}
			<div class="container justify-content-around fs-6">

				{% if notionSelected == notion.id %}
					<div class="notion-list-group-item list-group-item bg-green border-top-0 d-flex align-items-center justify-content-between">
						<a class="hover text-color-clair pe-5" href="/notion/show?id={{notion.id}}">{{ notion.name}}</a>
						<div>
							<a class="fs-5" href="">üõ†</a>
							<a class="fs-5" href="">üßª</a>
						</div>
					</div>
				{% else %}
					<div class="notion-list-group-item list-group-item bg-clair">
						{% if loop.first %}
							<a class="text-color-green pe-5" href="/notion/?id={{notion.id}}">{{ notion.name}}</a>
						{% else %}
							<a class="border-top-0 pe-5 text-color-green" href="/notion/show?id={{notion.id}}">{{ notion.name}}</a>
						{% endif %}
					</div>
				{% endif %}

			</div>
		{% endfor %}

	</div>
</div>
